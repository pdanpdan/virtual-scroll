{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "requireCleanWorkingDir": false
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  },
  "hooks": {
    "before:init": [
      "pnpm test:all"
    ],
    "after:bump": "npm version ${version} --no-git-tag-version --prefix packages/virtual-scroll && git add packages/virtual-scroll/package.json"
  }
}
