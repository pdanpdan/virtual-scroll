{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "references": [
    { "path": "packages/virtual-scroll" },
    { "path": "packages/playground" }
  ],
  "include": [
    "vitest.config.ts",
    "vite.config.ts",
    "eslint.config.js",
    "packages/*/vitest.config.ts",
    "packages/*/vite.config.ts"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/**",
    "dist",
    "**/dist/**"
  ]
}
